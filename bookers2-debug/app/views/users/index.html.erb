<div class="body">
    <div class="container">
        <p id="notice"></p>
        <div class="row">
            <div class="col-xs-3">
                <h2>User info</h2>
                <table class="table">
                    <tbody>
                        <%= form_for(@user) do |f| %>
                        <tr>
                            <th>
                                <%= attachment_image_tag @user, :profile_image,size:"100x100", fallback: "no_image.jpg" %>
                            </th>
                        </tr>
                        <th>name</th>
                        <th>
                            <%= @user.name %>
                        </th>
                        </tr>
                        <tr>
                            <th>introduction</th>
                            <th>
                                <%= @user.introduction %>
                            </th>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <% if @user.id == current_user.id %>
                <div class="row">
                    <%= link_to'edit',edit_user_path(current_user.id), class: 'btn btn-primary col-xs-12'%>
                </div>
                <%else%>
                <div class="row">
                    <%= link_to'edit',user_path(current_user.id), class: 'btn btn-primary col-xs-12'%>
                </div>
                <% end %>
                <div class="row">
                    <h2>New book</h2>
                    <%= form_for(@book) do |f| %>
                    <% if @book.errors.any? %>
                    <p>error</p>
                    <% end %>
                    <div>
                        <h4>Title</h4>
                        <%= f.text_field :title, class: 'col-xs-12'%>
                    </div>
                    <div>
                        <h4>Opinion</h4>
                        <%= f.text_area :body ,class: 'col-xs-12'%>
                    </div><br>
                    <div>
                        <%= f.submit 'Create Book',class: 'btn btn-primary col-xs-12' %>
                    </div>
                    <% end %>
                </div>
            </div>
            <div class="col-xs-9">
                <h2>Users</h2>
                <table class="table ">
                    <thead>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <th>
                                <%=  attachment_image_tag user,:profile_image,size:'40x40',fallback: "no_image.jpg" %>
                            </th>
                            <th>
                                <%= user.name %>
                            </th>
                            <th>
                                <%= link_to 'Show',user_path(user.id) %>
                            </th>
                            <th></th>
                        </tr>
                        <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>