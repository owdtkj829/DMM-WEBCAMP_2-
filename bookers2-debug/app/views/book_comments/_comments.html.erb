<% book_comments.each do |book_comment| %>
<tr>
    <td>
        <%= attachment_image_tag book_comment.user,:profile_image, size:"50x50", format: 'jpeg' , fallback: "no_image.jpg"%><br>
        <%= book_comment.user.name%>
    </td>
    <td>
        <%= book_comment.comment %>
    </td>
    <td>
        <% if book_comment.user_id == current_user.id %>
        <%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class:"btn btn-danger" %>
        <% end %>
    </td>
</tr>
<% end %>